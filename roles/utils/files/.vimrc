syntax on
set nu
set noerrorbells
set relativenumber
set nowrap

set smartindent
set expandtab
set tabstop=4
set softtabstop=4
filetype indent on

set nobackup
set nowritebackup
set undodir=~/.cache/undodir
set undofile
set hidden

set mouse=a
set incsearch
set nohlsearch

set wildmenu
set showmatch " Highlight matching brackets